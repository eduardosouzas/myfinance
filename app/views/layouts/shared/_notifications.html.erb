<% if notice %>
  <%= javascript_tag "$.notify( { message: '#{notice}'}, { type: 'success', placement: { from: 'top', align: 'center' }});" %>
<% end %>
<% if alert %>
    <%= javascript_tag "$.notify( { message: '#{alert}'}, { type: 'danger', placement: { from: 'top', align: 'center' }});" %>
<% end %>

<% unless @ad.nil?  %>
    <% if  @ad.errors.any? %>
        <script>
            <% @ad.errors.full_messages.each do |message|%>
                 $.notify({message:"<%= message %>"}, {type:'danger', placement: {from: 'top', align: 'center' }});
            <% end %>
        </script>
    <% end %>
<% end %>
